{
  "name": "dataclass",
  "version": "2.0.0",
  "description": "Data classes for TypeScript & JavaScript",
  "author": "Alexey Raspopov",
  "license": "ISC",
  "homepage": "https://dataclass.js.org",
  "repository": "alexeyraspopov/dataclass",
  "main": "./dataclass.js",
  "module": "./dataclass.module.js",
  "types": "./dataclass.d.ts",
  "sideEffects": false,
  "files": [
    "dataclass.*"
