    "rollup-plugin-copy": "^3.4.0",
    "typescript": "^4.8.3",
    "vitest": "^0.23.4"
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "all",
    "proseWrap": "always"
  }
